/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background lightblue
  transform translateX(-120%)
  transition 5s
  max-height 0
  padding 0 !important
  &.order-enter-active
    background yellow
    transform translateX(0)
    max-height 60px
    padding 2rem 0 !importnat

.order-exit
  background thistle
  transition 5s
  transform translateX(0)
  &.order-exit-active
    background pale
    transform translateX(+120%)